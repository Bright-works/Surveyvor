<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-4.0.xsd">

	<http auto-config="true">
		<intercept-url pattern="/user**" access="hasRole('ROLE_USER','ROLE_ADMIN')" />
		<intercept-url pattern="/survey/create**" access="hasRole('ROLE_USER','ROLE_ADMIN')" />
		<intercept-url pattern="/survey**" access="hasRole('ROLE_USER','ROLE_ADMIN','ROLE_ANONYME')" />
		<intercept-url pattern="/layers**" access="permitAll" />
		
		<access-denied-handler error-page=""/>
		<form-login login-page="/index.xhtml" default-target-url="/user/acceuil.xhtml"
		authentication-failure-url=""/>
	</http>
	<authentication-manager>
	<authentication-provider>
 			<user-service>
 				<user authorities="ROLE_USER" name="redouane" password="redouane" />
 				<user authorities="ROLE_USER" name="sarah" password="sarah" />
 				<user authorities="ROLE_ANONYME" name="david" password="david" />
 				<user authorities="ROLE_ADMIN" name="laurent" password="laurent" />
 			</user-service>
 		</authentication-provider>
	</authentication-manager>
 	
</beans:beans>